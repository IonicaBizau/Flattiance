{
  "name": "flattiance",
  "version": "1.1.7",
  "description": "A semi-flat fork of the Ubuntu Ambiance theme.",
  "main": "lib/index.js",
  "scripts": {
    "postinstall": "npm run postinstall:create-themes-dir && npm run postinstall:copy-theme",
    "postinstall:create-themes-dir": "mkdir -p $HOME/.themes",
    "postinstall:copy-theme": "cp -r Flattiance $HOME/.themes"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IonicaBizau/Flattiance.git"
  },
  "keywords": [
    "flattiance",
    "ambiance",
    "flat",
    "theme",
    "ubuntu"
  ],
  "author": "Ionică Bizău <bizauionica@gmail.com> (https://ionicabizau.net)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/IonicaBizau/Flattiance/issues"
  },
  "homepage": "https://github.com/IonicaBizau/Flattiance#readme",
  "blah": {
    "title": "Flattiance",
    "description": [
      {
        "h2": "Installation"
      },
      {
        "p": "Copy the `Flattiance` directory into `/usr/share/themes/` and activate it using `unity-tweak-tool`."
      }
    ],
    "ex_img": "http://i.imgur.com/rt7GEIL.png",
    "generateLicense": false
  },
  "files": [
    "bin/",
    "app/",
    "lib/",
    "dist/",
    "src/",
    "scripts/",
    "resources/",
    "menu/",
    "cli.js",
    "index.js"
  ]
}
