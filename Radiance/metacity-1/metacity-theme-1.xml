  <title color="shade/#dfd7cf/1.06"
         x="10"
         y="(((height - title_height) / 2) `max` 0)+1"/>
  <title color="shade/#dfd7cf/1.06"
         x="10"
         y="(((height - title_height) / 2) `max` 0)-1"/>
  <title color="shade/#dfd7cf/1.06"
         x="9"
         y="(((height - title_height) / 2) `max` 0)"/>
  <title color="shade/#dfd7cf/1.06"
         x="11"
         y="(((height - title_height) / 2) `max` 0)"/>
  <title color="shade/#dfd7cf/0.4"
         x="10"
         y="(((height - title_height) / 2) `max` 0)"/>

</draw_ops>

<draw_ops name="draw_title_text_inactive">
  <title color="shade/#dfd7cf/1.08"
