<!-- window titles -->

<draw_ops name="draw_title_text_normal">
  <title color="#333" x="10" y="(((height - title_height) / 2) `max` 0)+1"/>
  <title color="#333" x="10" y="(((height - title_height) / 2) `max` 0)-1"/>
  <title color="#333" x="9" y="(((height - title_height) / 2) `max` 0)"/>
  <title color="#333" x="11" y="(((height - title_height) / 2) `max` 0)"/>
  <title color="#dfdbd2" x="10" y="(((height - title_height) / 2) `max` 0)"/>
</draw_ops>

<draw_ops name="draw_title_text_inactive">
  <title color="#333" x="10" y="(((height - title_height) / 2) `max` 0)+1"/>
  <title color="#333" x="10" y="(((height - title_height) / 2) `max` 0)-1"/>
  <title color="#333" x="9" y="(((height - title_height) / 2) `max` 0)"/>
  <title color="#333" x="11" y="(((height - title_height) / 2) `max` 0)"/>
  <title color="#807d78" x="10" y="(((height - title_height) / 2) `max` 0)"/>
</draw_ops>

<draw_ops name="draw_title">
  <gradient type="vertical" x="0" y="0" width="width" height="top_height">
    <color value="#5c5b56" />
    <color value="shade/#3c3b37/1.1" />
    <color value="#3c3b37" />
  </gradient>
  <!-- topmost lines -->
  <line color="shade/#3c3b37/1.2" x1="0" x2="width" y1="0" y2="0"/>
  <line color="shade/#5c5b56/1.1" x1="0" x2="width" y1="1" y2="1"/>
  <!-- darkening of the left arch -->
  <line color="shade/#3c3b37/1.2" x1="0" x2="4" y1="1" y2="1"/>
  <line color="shade/#3c3b37/1.2" x1="0" x2="2" y1="2" y2="2"/>
  <line color="shade/#3c3b37/1.2" x1="0" x2="1" y1="3" y2="3"/>
  <line color="shade/#3c3b37/1.2" x1="0" x2="1" y1="4" y2="4"/>
  <!-- darkening of the right arch -->
  <line color="shade/#3c3b37/1.2" x1="width-5" x2="width" y1="1" y2="1"/>
  <line color="shade/#3c3b37/1.2" x1="width-3" x2="width" y1="2" y2="2"/>
  <line color="shade/#3c3b37/1.2" x1="width-2" x2="width" y1="3" y2="3"/>
  <line color="shade/#3c3b37/1.2" x1="width-2" x2="width" y1="4" y2="4"/>
  <!-- bottom line -->
  <line color="shade/#3c3b37/0.89" x1="0" y1="top_height - 1" x2="width" y2="top_height - 1"/>
</draw_ops>

<draw_ops name="draw_title_unfocused">
  <gradient type="vertical" x="0" y="0" width="width+9" height="height">
    <color value="#4b4a46" />
    <color value="shade/#3c3b37/1.1" />
    <color value="#3c3b37" />
  </gradient>
  <!-- topmost lines -->
  <line color="shade/#3c3b37/1.16" x1="0" x2="width" y1="0" y2="0"/>
  <line color="shade/#494844/1.14" x1="0" x2="width" y1="1" y2="1"/>
  <!-- darkening of the left arch -->
  <line color="shade/#3c3b37/1.2" x1="0" x2="4" y1="1" y2="1"/>
  <line color="shade/#3c3b37/1.2" x1="0" x2="2" y1="2" y2="2"/>
  <line color="shade/#3c3b37/1.2" x1="0" x2="1" y1="3" y2="3"/>
  <line color="shade/#3c3b37/1.2" x1="0" x2="1" y1="4" y2="4"/>
  <!-- darkening of the right arch -->
  <line color="shade/#3c3b37/1.2" x1="width-5" x2="width" y1="1" y2="1"/>
  <line color="shade/#3c3b37/1.2" x1="width-3" x2="width" y1="2" y2="2"/>
  <line color="shade/#3c3b37/1.2" x1="width-2" x2="width" y1="3" y2="3"/>
  <line color="shade/#3c3b37/1.2" x1="width-2" x2="width" y1="4" y2="4"/>
  <!-- bottom line -->
  <line color="shade/#3c3b37/0.89" x1="0" y1="top_height - 1" x2="width" y2="top_height - 1"/>
</draw_ops>

<draw_ops name="draw_title_inactive">
  <include name="draw_title_unfocused" />
</draw_ops>

<draw_ops name="draw_title_maximized">
  <gradient type="vertical" x="0" y="0" width="width" height="top_height">
    <color value="#5c5b56" />
    <color value="shade/#3c3b37/1.1" />
    <color value="#3c3b37" />
  </gradient>
  <!-- topmost dark line -->
  <line color="shade/#5c5b56/1.1" x1="0" x2="width" y1="0" y2="0"/>
  <!-- bottom line -->
  <line color="shade/#3c3b37/0.89" x1="0" y1="top_height - 1" x2="width" y2="top_height - 1"/>
</draw_ops>

<draw_ops name="draw_title_maximized_unfocused">
  <gradient type="vertical" x="0" y="0" width="width" height="top_height">
